<Project>
    <!-- Language Metadata -->
    <PropertyGroup>
        <LangVersion>8</LangVersion>
        <OutputType>Library</OutputType>
        <TargetFramework>net472</TargetFramework>
    </PropertyGroup>
    
    <!-- Assembly Metadata -->
    <PropertyGroup>
        <Authors>SirRandoo</Authors>
        <Product>ToolkitUtils</Product>
        <RepositoryType>git</RepositoryType>
        <RootNamespace>SirRandoo.$(MsBuildProjectName)</RootNamespace>
        <InformationalVersion>6.3.0.0.biotech.b7</InformationalVersion>
        <RepositoryUrl>https://github.com/sirrandoo/toolkit-utils</RepositoryUrl>
        <Copyright>AGPL3 Copyright (c) $([System.DateTime]::Now.ToString("yyyy")) SirRandoo</Copyright>
    </PropertyGroup>
    
    <!-- Build Metadata -->
    <PropertyGroup>
        <RimWorldVersion>1.4</RimWorldVersion>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <AssemblyName>$(MSBuildProjectName)</AssemblyName>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <_OutputDirectory>..\..\$(RimWorldVersion)\Assemblies\</_OutputDirectory>
        <_CompatibilityOutputDirectory>..\..\Compatibility\</_CompatibilityOutputDirectory>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    </PropertyGroup>
    
    <!-- Steam Paths -->
    <PropertyGroup>
        <RimWorldWorkshopRoot>C:\Program Files (x86)\Steam\steamapps\workshop\content\294100</RimWorldWorkshopRoot>
    </PropertyGroup>
    
    <!-- Local dependencies -->
    <ItemGroup>
        <Reference Include="TwitchToolkit">
            <HintPath>$(RimWorldWorkshopRoot)\1718525787\v1.3\Assemblies\TwitchToolkit.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="ToolkitCore">
            <HintPath>$(RimWorldWorkshopRoot)\2018368654\Assemblies\ToolkitCore.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="Newtonsoft.Json">
            <HintPath>$(RimWorldWorkshopRoot)\2018368654\Assemblies\Newtonsoft.Json.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="TwitchLib.Client">
            <HintPath>$(RimWorldWorkshopRoot)\2018368654\Assemblies\TwitchLib.Client.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="TwitchLib.Client.Enums">
            <HintPath>$(RimWorldWorkshopRoot)\2018368654\Assemblies\TwitchLib.Client.Enums.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="TwitchLib.Client.Models">
            <HintPath>$(RimWorldWorkshopRoot)\2018368654\Assemblies\TwitchLib.Client.Models.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="TwitchLib.Communication">
            <HintPath>$(RimWorldWorkshopRoot)\2018368654\Assemblies\TwitchLib.Communication.dll</HintPath>
            <Private>False</Private>
        </Reference>
    </ItemGroup>
    
    <!-- NuGet dependencies -->
    <ItemGroup>
        <PackageReference Include="0SirRandoo.CommonLib" Version="1.12.1" Condition="'$(Configuration)' == 'Release'">
            <ExcludeAssets Condition="'$(CompatibilityFor)' != ''">runtime</ExcludeAssets>
        </PackageReference>
        <Reference Include="SirRandoo.CommonLib" Condition="'$(Configuration)' == 'Debug'">
            <HintPath>..\Libs\0SirRandoo.CommonLib.dll</HintPath>
        </Reference>
        <PackageReference Include="Lib.Harmony" Version="2.2.2" ExcludeAssets="runtime"/>
        <PackageReference Include="Krafs.Rimworld.Ref" Version="$(RimWorldVersion).*" ExcludeAssets="runtime"/>
    </ItemGroup>
</Project>
