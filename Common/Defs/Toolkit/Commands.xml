<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <ToolkitCore.Models.ToolkitChatCommand Name="ShortcutBase" Abstract="true">
        <commandClass>TwitchToolkit.Commands.ViewerCommands.Buy</commandClass>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <!-- Shortcuts -->
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>ReviveAllShortcut</defName>
        <commandText>reviveall</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>A colony wide resurrector mech serum.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>ReviveMeShortcut</defName>
        <commandText>reviveme</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>A personal resurrector mech serum.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>HealMeShortcut</defName>
        <commandText>healme</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>A personal healer mech serum/</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>HealAllShortcut</defName>
        <commandText>healall</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>A colony wide healer mech serum.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>PassionShuffleShortcut</defName>
        <commandText>passionshuffle</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shuffles your passions. If a skill is specified, you'll be guaranteed a minor passion in it.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>SurgeryShortcut</defName>
        <commandText>surgery</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Purchases the part specified and queues it for surgery on your pawn.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>TraitShortcut</defName>
        <commandText>trait</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Adds a trait for your pawn.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>RemoveTraitShortcut</defName>
        <commandText>removetrait</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Removes a trait from our pawn.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand ParentName="ShortcutBase">
        <defName>ReviveAnyPawnShortcut</defName>
        <commandText>reviveanypawn</commandText>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>A resurrector mech serum for a random dead colonist.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <!-- Pawn Commands -->
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnHealth</defName>
        <commandText>mypawnhealth</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnHealthCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows an overview of your pawn's health. If a capacity is specified, it'll show what's affecting it.</Description>
                <Parameters>
                    <li>
                        <Type>Verse.PawnCapacityDef</Type>
                        <Name>Capacity</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnNeeds</defName>
        <commandText>mypawnneeds</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnNeedsCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows an overview of your pawn's needs.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnGear</defName>
        <commandText>mypawngear</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnGearCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows an overview of your pawn's gear.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnBody</defName>
        <commandText>mypawnbody</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnBodyCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows an overview of your pawn's body.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnWork</defName>
        <commandText>mypawnwork</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnWorkCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows your pawn's work priorities.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnStory</defName>
        <commandText>mypawnstory</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnStoryCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows your pawn's bio.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>MyPawnSkills</defName>
        <commandText>mypawnskills</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnSkillsCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows your pawn's current skills and their passions.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>FixMyPawn</defName>
        <commandText>fixmypawn</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnFixCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Attempts to relink your pawn to you.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>FixAllPawns</defName>
        <commandText>fixallpawns</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PawnFixAllCommand</commandClass>
        <requiresMod>true</requiresMod>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Attempts to relink all pawns to their respective viewers.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>AbandonPawn</defName>
        <commandText>leave</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.LeaveCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Makes your pawn leave the colony.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <!-- Colony Commands -->
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>Factions</defName>
        <commandText>factions</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.FactionsCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows an overview of the colony's current faction relations.</Description>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>Research</defName>
        <commandText>research</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.ResearchCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows the current research progress. If a project is specified, it'll show the progress of that instead.</Description>
                <Parameters>
                    <li>
                        <Type>Verse.ResearchProjectDef</Type>
                        <Name>Project</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <!-- General Commands -->
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>Lookup</defName>
        <commandText>lookup</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.LookupCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Shows the first few results for the query in the given category. Valid categories are: 'races', 'traits', 'items', 'events', 'diseases', 'animals', and 'skills'.</Description>
                <Parameters>
                    <li>
                        <Type>System.String</Type>
                        <Name>Category</Name>
                        <Optional>false</Optional>
                    </li>
                    <li>
                        <Type>System.String</Type>
                        <Name>Query</Name>
                        <Optional>false</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>PriceCheck</defName>
        <commandText>price</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.PriceCheckCommand</commandClass>
        
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Description>Similar to the lookup command, except it'll show the price for the first valid match.</Description>
                <Parameters>
                    <li>
                        <Type>System.String</Type>
                        <Name>Category</Name>
                        <Optional>false</Optional>
                    </li>
                    <li>
                        <Type>System.String</Type>
                        <Name>Query</Name>
                        <Optional>false</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>UnstickAll</defName>
        <commandText>unstick</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.UnstickCommand</commandClass>
        <requiresMod>true</requiresMod>
    </ToolkitCore.Models.ToolkitChatCommand>
    
    <ToolkitCore.Models.ToolkitChatCommand>
        <defName>Insult</defName>
        <commandText>insult</commandText>
        <commandClass>SirRandoo.ToolkitUtils.Commands.InsultCommand</commandClass>
    </ToolkitCore.Models.ToolkitChatCommand>
</Defs>
