<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <TwitchToolkit.Command Name="ShortcutBase" Abstract="true">
        <commandDriver>TwitchToolkit.Commands.ViewerCommands.Buy</commandDriver>
    </TwitchToolkit.Command>

    <!-- Shortcuts -->
    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>ReviveAllShortcut</defName>
        <label>revive all</label>
        <command>reviveall</command>
        <description>A colony wide resurrector mech serum.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>ReviveMeShortcut</defName>
        <label>revive me</label>
        <command>reviveme</command>
        <description>A personal resurrector mech serum.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>HealMeShortcut</defName>
        <label>heal me</label>
        <command>healme</command>
        <description>A personal healer mech serum.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>HealAllShortcut</defName>
        <label>healall</label>
        <command>healall</command>
        <description>A colony wide healer mech serum.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>PassionShuffleShortcut</defName>
        <label>passion shuffle</label>
        <command>passionshuffle</command>
        <description>Shuffles your passions. If a skill is specified, you'll be guaranteed a minor passion in it.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Skill</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>SurgeryShortcut</defName>
        <label>surgery</label>
        <command>surgery</command>
        <description>Purchases the part specified and queues it for surgery on your pawn.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Item</Name>
                    </li>
                    <li>
                        <Names>
                            <li>Quantity</li>
                            <li>BodyPart</li>
                        </Names>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>TraitShortcut</defName>
        <label>add trait</label>
        <command>trait</command>
        <description>Adds a trait for your pawn.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>RemoveTraitShortcut</defName>
        <label>remove trait</label>
        <command>removetrait</command>
        <description>Removes a trait from your pawn.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>ReviveAnyPawnShortcut</defName>
        <label>revive any pawn</label>
        <command>reviveanypawn</command>
        <description>A resurrector mech serum for a random deceased colonist.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>HealAnyPawnShortcut</defName>
        <label>heal any pawn</label>
        <command>healanypawn</command>
        <description>A healer mech serum for a random colonist.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>ReplaceTraitShortcut</defName>
        <label>replace trait</label>
        <command>replacetrait</command>
        <description>Replaces a trait with a different trait.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Old</Name>
                    </li>
                    <li>
                        <Name>New</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>BackpackShortcut</defName>
        <label>backpack</label>
        <command>backpack</command>
        <description>It's like buy item, but it gets added to your inventory if possible.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Item</Name>
                    </li>
                    <li>
                        <Name>Quantity</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>RemovePassionShortcut</defName>
        <label>remove passion</label>
        <command>removepassion</command>
        <description>Downgrades a skill's passion... sometimes.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Skill</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>AddPassionShortcut</defName>
        <label>add passion</label>
        <command>passion</command>
        <description>Upgrades a skill's passion... sometimes.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Skill</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>FullHealShortcut</defName>
        <label>full heal</label>
        <command>fullheal</command>
        <description>Heals all healable injuries your pawn currently has.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command ParentName="ShortcutBase">
        <defName>RescueMeShortcut</defName>
        <label>rescue me</label>
        <command>rescueme</command>
        <description>Creates a prisoner rescue quest for your most recently kidnapped pawn.</description>
    </TwitchToolkit.Command>

    <!-- Pawn Commands -->
    <TwitchToolkit.Command>
        <defName>MyPawnKills</defName>
        <label>viewer kill count</label>
        <command>mypawnkills</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnKills</commandDriver>
        <description>Shows your current kill count.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnStats</defName>
        <label>viewer stats</label>
        <command>mypawnstats</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnStats</commandDriver>
        <description>Shows your current stats within a given category.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Stat1</Name>
                        <Optional>true</Optional>
                    </li>
                    <li>
                        <Name>Stat2</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnHealth</defName>
        <label>viewer health</label>
        <command>mypawnhealth</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnHealth</commandDriver>
        <description>Shows an overview of your pawn's health. If a capacity is specified, it'll show what's affecting it.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <SettingsHandler>SirRandoo.ToolkitUtils.CommandSettings.PawnHealth</SettingsHandler>
                <Parameters>
                    <li>
                        <Name>Capacity</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnNeeds</defName>
        <label>viewer needs</label>
        <command>mypawnneeds</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnNeeds</commandDriver>
        <description>Shows an overview of your pawn's needs.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnGear</defName>
        <label>viewer gear</label>
        <command>mypawngear</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnGear</commandDriver>
        <description>Shows an overview of your pawn's gear.</description>

        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <SettingsHandler>SirRandoo.ToolkitUtils.CommandSettings.PawnGear</SettingsHandler>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnBody</defName>
        <label>viewer body</label>
        <command>mypawnbody</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnBody</commandDriver>
        <description>Shows an overview of your pawn's body.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnWork</defName>
        <label>viewer work</label>
        <command>mypawnwork</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnWork</commandDriver>
        <description>Shows your pawn's work priorities.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <SettingsHandler>SirRandoo.ToolkitUtils.CommandSettings.PawnWork</SettingsHandler>
                <Parameters>
                    <li>
                        <Name>WorkType=Priority</Name>
                        <Optional>true</Optional>
                    </li>
                    <li>
                        <Name>...</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnStory</defName>
        <label>viewer story</label>
        <command>mypawnstory</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnStory</commandDriver>
        <description>Shows your pawn's bio.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>MyPawnSkills</defName>
        <label>viewer skills</label>
        <command>mypawnskills</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnSkills</commandDriver>
        <description>Shows your pawn's current skills and their passions.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>FixMyPawn</defName>
        <label>fix viewer pawn</label>
        <command>fixmypawn</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnFix</commandDriver>
        <description>Attempts to relink your pawn to your. (Doesn't work for Puppeteer)</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>FixAllPawns</defName>
        <label>fix all pawns</label>
        <command>fixallpawns</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnFixAll</commandDriver>
        <requiresMod>true</requiresMod>
        <description>Attempts to relink all pawns to their respective viewers. (Doesn't work for Puppeteer)</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>AbandonPawn</defName>
        <label>abandon pawn</label>
        <command>leave</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnLeave</commandDriver>
        <description>Makes your pawn leave the colony.</description>

        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <SettingsHandler>SirRandoo.ToolkitUtils.CommandSettings.PawnLeave</SettingsHandler>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>PawnRelations</defName>
        <label>viewer relations</label>
        <command>mypawnrelations</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnRelations</commandDriver>
        <description>Shows your pawn's relationships to other viewers.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <SettingsHandler>SirRandoo.ToolkitUtils.CommandSettings.PawnRelations</SettingsHandler>
                <Parameters>
                    <li>
                        <Name>Viewer</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <!-- Colony Commands -->
    <TwitchToolkit.Command>
        <defName>Factions</defName>
        <label>factions</label>
        <command>factions</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Factions</commandDriver>
        <description>Shows an overview of the colony's current faction relations.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>Research</defName>
        <label>research</label>
        <command>research</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Research</commandDriver>
        <description>Shows the current research progress. If a project is specified, it'll show the progress of that instead.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Names>
                            <li>Project</li>
                            <li>Item</li>
                        </Names>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <!-- General Commands -->
    <TwitchToolkit.Command>
        <defName>Lookup</defName>
        <label>lookup</label>
        <command>lookup</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Lookup</commandDriver>
        <description>Shows the first few results for the query in the given category. Valid categories are: 'pawns', 'traits', 'items', 'events', 'diseases', 'animals', and 'skills'.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <SettingsHandler>SirRandoo.ToolkitUtils.CommandSettings.Lookup</SettingsHandler>
                <Parameters>
                    <li>
                        <Names>
                            <li>Item</li>
                            <li>Category</li>
                        </Names>
                    </li>
                    <li>
                        <Name>Query</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>PriceCheck</defName>
        <label>price check</label>
        <command>price</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PriceCheck</commandDriver>
        <description>Similar to the lookup command, except it'll show the price for the first valid match.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Names>
                            <li>Item</li>
                            <li>Category</li>
                        </Names>
                    </li>
                    <li>
                        <Name>Query</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>UnstickAll</defName>
        <label>unstick</label>
        <command>unstick</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Unstick</commandDriver>
        <requiresMod>true</requiresMod>
        <description>Removes viewers that were stuck in the "game paused" limbo.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>ToggleStore</defName>
        <label>toggle store</label>
        <command>togglestore</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.ShopToggle</commandDriver>
        <requiresMod>true</requiresMod>
        <description>Toggles whether or not viewers can actively purchase things from the store.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>Insult</defName>
        <label>insult</label>
        <command>insult</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnInteraction</commandDriver>
        <description>Makes your pawn insult a random pawn. If a viewer is specified, you'll insult them instead.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Target</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>Chat</defName>
        <label>chat</label>
        <command>chat</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnInteraction</commandDriver>
        <description>Makes your pawn chat with a random pawn. If a viewer is specified, you'll chat with their pawn instead.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Target</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>Flirt</defName>
        <label>flirt</label>
        <command>flirt</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnInteraction</commandDriver>
        <description>Makes your pawn flirt with a random pawn. If a viewer is specified, you'll flirt with their pawn instead.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Target</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>DeepChat</defName>
        <label>deep chat</label>
        <command>deepchat</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnInteraction</commandDriver>
        <description>Makes your pawn have a deep chat a random pawn. If a viewer is specified, you'll have a deep chat with their pawn instead.</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Name>Target</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>Wealth</defName>
        <label>colony wealth</label>
        <command>wealth</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Wealth</commandDriver>
        <description>Shows the colony's current wealth. This command uses the same value the storyteller will use.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>ColonistCount</defName>
        <label>colonist count</label>
        <command>colonists</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.ColonistCount</commandDriver>
        <description>Shows the current number of colonists remaining in the colony.</description>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>RimDatabase</defName>
        <label>database</label>
        <command>rwdata</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Database</commandDriver>
        <description>Provides some information about supported things. Supported categories are: 'weapons'</description>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                <Parameters>
                    <li>
                        <Names>
                            <li>Category</li>
                            <li>WeaponName</li>
                        </Names>
                    </li>
                    <li>
                        <Names>
                            <li>WeaponName</li>
                        </Names>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Command>

    <TwitchToolkit.Command>
        <defName>UnstickMe</defName>
        <label>unstick me</label>
        <command>imstuck</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.UnstickMe</commandDriver>
        <description>It's like unstick, but safer for viewers to use.</description>
    </TwitchToolkit.Command>
    
    <TwitchToolkit.Command>
        <defName>Marriage</defName>
        <label>marriage</label>
        <command>marry</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Marriage</commandDriver>
        <description>Lets viewers marry each other.</description>
    </TwitchToolkit.Command>
    
    <TwitchToolkit.Command>
        <defName>Divorce</defName>
        <label>divorce</label>
        <command>divorce</command>
        <commandDriver>SirRandoo.ToolkitUtils.Commands.Divorce</commandDriver>
        <description>Lets a viewer divorce their spouse.</description>
    </TwitchToolkit.Command>
</Defs>
