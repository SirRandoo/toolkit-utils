<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <TwitchToolkit.Incidents.StoreIncidentSimple>
        <defName>ReviveAll</defName>
        <label>revive all</label>
        <abbreviation>reviveall</abbreviation>
        <description>Revives all deceased colonists in the colony.</description>
        <cost>22664</cost>
        <eventCap>2</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.ReviveAll</incidentHelper>
        <karmaType>Good</karmaType>
    </TwitchToolkit.Incidents.StoreIncidentSimple>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>ReviveMe</defName>
        <label>reviveme</label>
        <description>Revives the purchaser's pawn, assuming they have one.</description>
        <abbreviation>reviveme</abbreviation>
        <cost>2833</cost>
        <eventCap>2</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.ReviveMe</incidentHelper>
        <karmaType>Good</karmaType>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>HealAll</defName>
        <label>heal all</label>
        <description>Heals one affliction on all colonists.</description>
        <abbreviation>healall</abbreviation>
        <cost>17336</cost>
        <eventCap>2</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.HealAll</incidentHelper>
        <karmaType>Good</karmaType>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.HealAll</customSettingsHelper>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>HealRandomPawn</defName>
        <label>heal random pawn</label>
        <description>Heals one affliction on a random pawn in the colony.</description>
        <abbreviation>healanypawn</abbreviation>
        <cost>2000</cost>
        <eventCap>2</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.HealRandom</incidentHelper>
        <karmaType>Good</karmaType>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.HealRandom</customSettingsHelper>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>HealMe</defName>
        <label>healme</label>
        <description>Heals one affliction on the purchaser's pawn, assuming they have one.</description>
        <abbreviation>healme</abbreviation>
        <cost>2167</cost>
        <eventCap>2</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.HealMe</incidentHelper>
        <karmaType>Good</karmaType>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.HealMe</customSettingsHelper>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>BuySurgery</defName>
        <label>surgery</label>
        <description>Buys and queues a surgery on the purchaser's pawn, assuming they have one.</description>
        <abbreviation>surgery</abbreviation>
        <cost>500</cost>
        <eventCap>5</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.BuySurgery</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>2</variables>

        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <EventType>Item</EventType>
                <Parameters>
                    <li>
                        <Name>Item</Name>
                    </li>
                    <li>
                        <Names>
                            <li>Quantity</li>
                            <li>BodyPart</li>
                        </Names>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>PassionShuffle</defName>
        <label>passion shuffle</label>
        <description>Shuffles the purchaser's pawn's passions, assuming they have one. If the Interests mod is active, this command also shuffles their interests.</description>
        <abbreviation>passionshuffle</abbreviation>
        <cost>2000</cost>
        <eventCap>4</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.PassionShuffle</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>1</variables>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <Parameters>
                    <li>
                        <Name>Skill</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>ReplaceTrait</defName>
        <label>replace trait</label>
        <abbreviation>replacetrait</abbreviation>
        <description>Replaces a trait on the purchaser's pawn, assuming they have one, with the specified trait.</description>
        <cost>1</cost>
        <eventCap>6</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.ReplaceTrait</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>2</variables>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <EventType>Trait</EventType>
                <Parameters>
                    <li>
                        <Name>OldTrait</Name>
                    </li>
                    <li>
                        <Name>NewTrait</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>RescueMe</defName>
        <label>rescue me</label>
        <abbreviation>rescueme</abbreviation>
        <description>Creates a quest where the objective is to rescue the purchaser's most recent colonist from their kidnappers.</description>
        <cost>800</cost>
        <eventCap>5</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.RescueMe</incidentHelper>
        <karmaType>Neutral</karmaType>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>FullHeal</defName>
        <label>full heal</label>
        <abbreviation>fullheal</abbreviation>
        <cost>2167</cost>
        <description>Heals all afflictions on the purchaser's pawn, assuming they have one. The purchaser will be charged for each affliction removed.</description>
        <eventCap>5</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.FullHeal</incidentHelper>
        <karmaType>Good</karmaType>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.FullHeal</customSettingsHelper>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <EventType>Variable</EventType>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>AddPassion</defName>
        <label>add passion</label>
        <abbreviation>passion</abbreviation>
        <description>Deepens the purchaser's pawn's passion in the specified skill. Depending on the settings, the event's effect may differ from purchase to purchase.</description>
        <cost>7000</cost>
        <eventCap>3</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.AddPassion</incidentHelper>
        <karmaType>Good</karmaType>
        <variables>1</variables>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.AddPassion</customSettingsHelper>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <Parameters>
                    <li>
                        <Name>Skill</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>RemovePassion</defName>
        <label>remove passion</label>
        <description>Lessens the purchaser's pawn's passion in the specified skill. Depending on the settings, the event's effect may differ from purchase to purchase.</description>
        <abbreviation>removepassion</abbreviation>
        <cost>5000</cost>
        <eventCap>3</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.RemovePassion</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>1</variables>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.RemovePassion</customSettingsHelper>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <Parameters>
                    <li>
                        <Name>Skill</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>Backpack</defName>
        <label>backpack</label>
        <description>Purchases an item and puts it in the purchaser's pawn's inventory. If the item is equippable, the item will instead be equipped as a weapon, or as apparel.</description>
        <abbreviation>backpack</abbreviation>
        <cost>1</cost>
        <eventCap>6</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.Backpack</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>2</variables>
        <customSettings>true</customSettings>
        <customSettingsHelper>SirRandoo.ToolkitUtils.IncidentSettings.Backpack</customSettingsHelper>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <EventType>Item</EventType>
                <Parameters>
                    <li>
                        <Name>Item</Name>
                    </li>
                    <li>
                        <Name>Amount</Name>
                        <Optional>true</Optional>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>SetTraits</defName>
        <label>set traits</label>
        <description>Sets the purchaser's pawn's traits to the traits specified. Every trait change will be charged individually according to the settings for said trait.</description>
        <abbreviation>settraits</abbreviation>
        <cost>1</cost>
        <eventCap>6</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.SetTraits</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>4</variables>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <EventType>Trait</EventType>
                <Parameters>
                    <li>
                        <Name>Trait(s)</Name>
                    </li>
                </Parameters>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>

    <TwitchToolkit.Incidents.StoreIncidentVariables>
        <defName>ClearTraits</defName>
        <label>clear traits</label>
        <description>Removes all the purchaser's pawn's traits. Every removal will be charged individually according to the settings for said trait.</description>
        <abbreviation>cleartraits</abbreviation>
        <cost>1</cost>
        <eventCap>6</eventCap>
        <incidentHelper>SirRandoo.ToolkitUtils.Incidents.ClearTraits</incidentHelper>
        <karmaType>Neutral</karmaType>
        <variables>0</variables>
        <modExtensions>
            <li Class="SirRandoo.ToolkitUtils.EventExtension">
                <EventType>Trait</EventType>
            </li>
        </modExtensions>
    </TwitchToolkit.Incidents.StoreIncidentVariables>
</Defs>
